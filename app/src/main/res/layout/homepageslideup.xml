<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/quote"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight=".5"
        android:background="@android:color/black"
        android:gravity="center"
        android:text="All it Takes is the First Stride"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/btScan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:text="Scan" />

            <ImageButton
                android:id="@+id/runButton"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="35dp"
                android:layout_weight=".25"
                android:backgroundTint="#ffffff"
                android:src="@drawable/runningwords" />

            <ImageButton
                android:id="@+id/bikeButton"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/runButton"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="35dp"
                android:layout_weight=".25"
                android:backgroundTint="#ffffff"
                android:contentDescription="TODO"
                android:src="@drawable/bikewo" />

            <ImageButton
                android:id="@+id/jumpButton"
                android:layout_width="fill_parent"
                android:layout_height="165dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:layout_weight=".25"
                android:backgroundTint="#ffffff"
                android:src="@drawable/jumprope1" />

            <ImageButton
                android:id="@+id/abButton"
                android:layout_width="fill_parent"
                android:layout_height="165dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:layout_weight=".25"
                android:backgroundTint="#ffffff"
                android:src="@drawable/abs" />

            <ImageButton
                android:id="@+id/battleButton"
                android:layout_width="fill_parent"
                android:layout_height="165dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:layout_weight=".25"
                android:backgroundTint="#ffffff"
                android:src="@drawable/battleropes" />

            <ImageButton
                android:id="@+id/elipButton"
                android:layout_width="fill_parent"
                android:layout_height="165dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:layout_weight=".25"
                android:backgroundTint="#ffffff"
                android:src="@drawable/elip" />

            <ImageButton
                android:id="@+id/deadButton"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:layout_weight=".25"
                android:backgroundTint="#ffffff"
                android:src="@drawable/dead2" />

            <ImageButton
                android:id="@+id/customButton"
                android:layout_width="fill_parent"
                android:layout_height="205dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_weight=".25"
                android:backgroundTint="#ffffff"
                android:src="@drawable/custom_workout" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>