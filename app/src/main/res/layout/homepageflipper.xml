<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <ViewFlipper
            android:id="@+id/view_flipper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/runButton"
                android:layout_width="fill_parent"
                android:layout_height="300dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/running3" />

            <Button
                android:id="@+id/runModule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/runButton"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black"
                android:text="ENTER"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="13dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/jumpButton"
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/jumprope3" />


            <Button
                android:id="@+id/jumpModule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/jumpButton"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black"
                android:text="ENTER"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="43dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/bikeButton"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="63dp"
                android:backgroundTint="@android:color/background_dark"
                android:contentDescription="@string/todo"
                android:src="@drawable/bikewo3" />

            <Button
                android:id="@+id/bikeModule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/bikeButton"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:background="@android:color/black"
                android:text="ENTER"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="63dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/customButton"
                android:layout_width="fill_parent"
                android:layout_height="350dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/custom_workout3" />


            <Button
                android:id="@+id/customModule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/customButton"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                android:background="@android:color/black"
                android:text="ENTER"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="43dp"/>
        </RelativeLayout>
    </ViewFlipper>


</LinearLayout>