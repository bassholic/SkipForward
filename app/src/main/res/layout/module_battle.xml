<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jrope"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="18dp"
        android:layout_marginTop="39dp"
        android:background="#00ff00"
        android:text="Solo 9 Min"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/jrope"
        android:layout_width="400dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        app:srcCompat="@drawable/jrope" />

    <Button
        android:id="@+id/jump60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jrope"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginStart="160dp"
        android:layout_marginTop="41dp"
        android:background="#00ff00"
        android:text="Begginer 9 Min"
        android:textStyle="bold" />

    <Button
        android:id="@+id/jump600cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="#ffff00"
        android:text="Intense 18"
        android:textStyle="bold" />

    <Button
        android:id="@+id/jumpk30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="142dp"
        android:background="@android:color/holo_red_light"
        android:text="30 Min of Cardio"
        android:textStyle="bold" />






</RelativeLayout>