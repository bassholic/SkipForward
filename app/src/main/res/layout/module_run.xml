<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <Button
        android:id="@+id/mwr21"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="73dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Mon Tue Thur"
        android:textStyle="bold" />

    <Button
        android:id="@+id/fri21"
        android:layout_width="62dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/mwr21"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/transparent"
        android:text="Fri"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sat21"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/fri21"
        android:layout_gravity="center"
        android:layout_marginEnd="28dp"
        android:backgroundTint="@android:color/transparent"
        android:text="Sat"
        android:textStyle="bold" />


    <Button
        android:id="@+id/easy30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/sat21"
        android:layout_alignTop="@+id/bb15walker"
        android:layout_gravity="center"
        android:background="#ffff00"
        android:backgroundTint="@android:color/transparent"
        android:text="30 min Incline"
        android:textColor="#000000" />

    <Button
        android:id="@+id/sprint37"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/paced20HIIT"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="#ffff00"
        android:text="37 Sprint"
        android:textColor="#000000"
        android:textStyle="bold" />


    <Button
        android:id="@+id/paced20HIIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="27dp"
        android:background="#ffff00"
        android:text="20 Split HIIT"
        android:textColor="#000000"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bb15walker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bb30hill"
        android:backgroundTint="@android:color/transparent"
        android:text="15 Glutes" />

    <Button
        android:id="@+id/bb20sprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/bb30sprint"
        android:backgroundTint="@android:color/transparent"
        android:text="20min 1.8 Mi"
        android:textColor="#fff" />

    <Button
        android:id="@+id/bb30sprint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fri21"
        android:layout_alignParentTop="true"
        android:layout_marginTop="216dp"
        android:backgroundTint="@android:color/transparent"
        android:text="30min 2.5 Mi"
        android:textColor="#fff" />

    <Button
        android:id="@+id/speed5k"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bb20sprint"
        android:layout_toEndOf="@+id/sprint37"
        android:backgroundTint="@android:color/transparent"
        android:text="25min 5k"
        android:textColor="#fff" />

    <Button
        android:id="@+id/bb30hill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_toEndOf="@+id/mwr21"
        android:backgroundTint="@android:color/transparent"
        android:text="30min hill" />

    <RadioGroup
        android:id="@+id/weekGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/week1"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/week1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wk1" />

        <RadioButton
            android:id="@+id/week2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wk2" />

        <RadioButton
            android:id="@+id/week3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wk3" />

    </RadioGroup>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/weekGroup"
        android:background="@android:color/background_light"
        app:srcCompat="@drawable/shred21day" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="TREADMILL WORKOUTS"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="126dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/rd25k" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView5"
        android:layout_marginBottom="89dp"
        app:srcCompat="@drawable/incline" />


</RelativeLayout>